<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <resource-ref>
        <description>Datasource for Database</description>
        <res-ref-name>jdbc/Database</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
     <security-constraint>
        <!--  to access these pages  -->
        <web-resource-collection>
            <web-resource-name>Hovedside</web-resource-name>
            <url-pattern>/MainPage</url-pattern>
         </web-resource-collection>
        <!--  the user must have one of these roles  -->
        <auth-constraint>
            <role-name>RegistrertStudent</role-name>
            <role-name>UregistrertStudent</role-name>
            <role-name>Foreleser</role-name>
            <role-name>Hjelpelærer</role-name>
            
        </auth-constraint>
        
    </security-constraint>
    
    <security-constraint>
        <!--  to access these pages  -->
        <web-resource-collection>
            <web-resource-name>DynamiskeSider</web-resource-name>
            <url-pattern>/ModuleMenu</url-pattern>
            <url-pattern>/ModulePage</url-pattern>
            <url-pattern>/MedlemsListeVlet</url-pattern>
            <url-pattern>/InnleveringVlet</url-pattern>
            <url-pattern>/DeleteModuleVlet</url-pattern>

        </web-resource-collection>
        <!--  the user must have one of these roles  -->
        <auth-constraint>
            <role-name>RegistrertStudent</role-name>
            <role-name>Foreleser</role-name>
            <role-name>Hjelpelærer</role-name>
            
        </auth-constraint>
        
    </security-constraint>
    

    <!--  the available roles  -->
    <security-role>
        <role-name>Foreleser</role-name>
    </security-role>
    <security-role>
        <role-name>RegistrertStudent</role-name>
    </security-role>
    <security-role>
        <role-name>UregistrertStudent</role-name>
    </security-role>
    <security-role>
        <role-name>Hjelpelærer</role-name>
    </security-role>

    <!-- which realm to use -->
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>DataSourceRealm</realm-name>
    </login-config>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
